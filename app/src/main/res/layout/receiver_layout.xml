<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/message_margin">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver"
        android:layout_width="@dimen/small_avatar_size"
        android:layout_height="@dimen/small_avatar_size"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receiverText"
        android:text="@string/text"
        android:textSize="@dimen/text_size"
        android:layout_marginStart="@dimen/message_margin"
        android:layout_marginTop="@dimen/message_margin"
        android:padding="@dimen/message_padding"
        android:textColor="@color/purple_200"
        android:background="@drawable/text_border_opp"
        android:layout_toEndOf="@id/receiver"/>
</RelativeLayout>